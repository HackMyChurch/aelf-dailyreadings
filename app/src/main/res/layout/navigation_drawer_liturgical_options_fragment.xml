<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_header_liturgical_option"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="4dp">

    <View
        android:id="@+id/drawer_header_liturgical_color"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginTop="6dp"
        android:background="?attr/colorLiturgicalGreen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drawer_header_liturgical_day_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorLectureText"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/drawer_header_liturgical_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="La Sainte Trinité" />

    <TextView
        android:id="@+id/drawer_header_liturgical_day_degree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="?attr/colorLectureText"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginTop="-4dp"
        app:layout_constraintLeft_toLeftOf="@+id/drawer_header_liturgical_day_title"
        app:layout_constraintRight_toRightOf="@+id/drawer_header_liturgical_day_title"
        app:layout_constraintTop_toBottomOf="@+id/drawer_header_liturgical_day_title"
        tools:text="Solennité" />

</androidx.constraintlayout.widget.ConstraintLayout>