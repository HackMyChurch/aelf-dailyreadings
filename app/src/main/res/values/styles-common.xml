<resources>
    <style name="AelfActionBar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/AelfToolBarTitleText</item>
        <item name="android:background">@color/light_aelf_primary_dark</item>
    </style>

    <style name="AelfToolBarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="windowCrossFade">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AelfSearchRadioButtonsBase" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="buttonCompat">@null</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/radio_flat_text_selector</item>
    </style>

    <style name="AelfTabStripBase">
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
        <item name="tabInlineLabel">true</item>
    </style>
</resources>