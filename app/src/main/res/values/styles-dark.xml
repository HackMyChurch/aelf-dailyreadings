<resources>
    <style name="AelfAppBaseThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Logo -->
        <item name="drawableAelfLogo">@drawable/aelf_logo_dark</item>

        <!-- Shell / Native theme colors -->
        <item name="colorAccent">@color/dark_aelf_accent</item>
        <item name="colorAccentDark">@color/dark_aelf_accent_dark</item>
        <item name="colorPrimary">@color/dark_aelf_primary</item>
        <item name="colorPrimaryDark">@color/dark_aelf_primary_dark</item>
        <item name="android:colorBackground">@color/dark_aelf_primary_dark</item>
        <item name="colorDrawerItemText">@color/white</item>
        <item name="android:windowBackground">@color/dark_aelf_window_background</item>

        <!-- Lecture colors -->
        <item name="colorLectureText">@color/dark_aelf_lecture_text</item>
        <item name="colorLectureBackground">@color/dark_aelf_lecture_background</item>
        <item name="colorLectureBackgroundDarker">@color/dark_aelf_lecture_background_darker</item>
        <item name="colorLectureAccent">@color/dark_aelf_accent</item>

        <!-- Liturgical colors -->
        <item name="colorLiturgicalWhite">@color/dark_liturgical_white</item>
        <item name="colorLiturgicalGreen">@color/dark_liturgical_green</item>
        <item name="colorLiturgicalRed">@color/dark_liturgical_red</item>
        <item name="colorLiturgicalPurple">@color/dark_liturgical_purple</item>
        <item name="colorLiturgicalPink">@color/dark_liturgical_pink</item>
        <item name="colorLiturgicalBlack">@color/dark_liturgical_black</item>
        <item name="colorLiturgicalUnknown">@color/dark_liturgical_unknown</item>
        
        <!-- Component styles -->
        <item name="toolbarStyle">@style/AelfActionBarDark</item>
        <item name="tabstripStyle">@style/AelfTabStripDark</item>
        <item name="flatRadioButtonStyle">@style/AelfSearchRadioButtonsDark</item>
        <item name="listPopupWindowStyle">@style/AelfListPopupWindow</item>
        <item name="drawableMenuItemBg">@drawable/menu_item_bg_dark</item>
        <item name="drawableButtonShape">@drawable/button_shape_dark</item>
        <item name="drawableDrawerHeaderBg">@drawable/drawer_header_bg_dark</item>

        <!-- Animations -->
        <item name="android:windowAnimationStyle">@style/windowCrossFade</item>
    </style>

    <!-- Application theme. -->
    <style name="AelfAppThemeDark" parent="AelfAppBaseThemeDark">
    </style>

    <style name="AelfActionBarDark" parent="AelfActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="AelfTabStripDark" parent="AelfTabStripBase">
        <item name="android:background">@color/dark_aelf_primary_dark</item>
        <item name="android:textColor">@color/dark_aelf_accent</item>
        <item name="tabTextColor">@color/dark_aelf_accent</item>
        <item name="tabIndicatorColor">@color/dark_aelf_accent</item>
        <item name="tabIconTint">@color/dark_aelf_accent</item>
    </style>

    <style name="AelfSearchRadioButtonsDark" parent="AelfSearchRadioButtonsBase">
        <item name="android:background">@drawable/radio_flat_selector_dark</item>
    </style>

    <style name="AelfListPopupWindow" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">#303030</item>
    </style>

</resources>
